[mysqld]

# Larger values mean less disk I/O due to less flushing checkpoint activity, but also slower recovery from a crash.
innodb_log_file_size = 512M

# https://mariadb.com/kb/en/innodb-system-variables/#innodb_flush_log_at_trx_commit
innodb_flush_log_at_trx_commit = 0

# buffer pool stuff
# innodb_buffer_pool_size = 1G
# innodb_autoextend_increment = 64

# https://mariadb.com/kb/en/innodb-system-variables/#innodb_doublewrite
innodb_doublewrite = OFF

#innodb_flush_method = O_DIRECT_NO_FSYNC
#innodb_page_size = 4k
innodb_sort_buffer_size = 2M
innodb_file_per_table = 1

# truncate ibdata
innodb_undo_log_truncate = 1
innodb_max_undo_log_size = 2G
